services:
  pihole:
    container_name: pihole
    image: "pihole/pihole:{{ pihole_docker_image_version }}"
    restart: unless-stopped
    networks:
      - proxy
    ports:
      - "53:53/tcp"
      - "53:53/udp"
    environment:
      TZ: "Europe/Helsinki"
      FTLCONF_webserver_api_password: "{{ pihole_admin_password }}"
      FTLCONF_dns_upstreams: "{{ pihole_dns_servers }}"
      FTLCONF_dns_domainNeeded: "true"
      FTLCONF_misc_etc_dnsmasq_d: 'true'
    volumes:
      - "{{ pihole_home_directory }}/etc-pihole:/etc/pihole"
      - "{{ pihole_dnsmasq_directory }}:/etc/dnsmasq.d"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.pihole.rule=Host(`pihole.{{ domain_name }}`)"
      - "traefik.http.services.pihole.loadbalancer.server.port=80"
      - "traefik.http.routers.pihole.entrypoints=websecure"
      - "traefik.http.routers.pihole.tls=true"

networks:
  proxy:
    name: proxy
    external: true